{
  "name": "equipment-catalog",
  "version": "1.0.0",
  "author": "Daniil Sobolev",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "cpy . '!**/*.ts' '../dist/src' --cwd=src --no-overwrite --parents && cpy ./public/ dist/ --no-overwrite --parents",
    "format": "npx prettier --ignore-path ./.prettierignore --write \"**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start -w",
    "start:debug": "nest start --exec 'node --inspect-brk' --watch",
    "prestart:prod": "npm run migration:run",
    "start:prod": "node dist/src/main",
    "prelint": "npx eslint \"{src,apps,libs,test}/**/*.ts\" --fix && npm run format",
    "lint": "npx eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "env ENVIRONMENT=jest jest",
    "test:watch": "env ENVIRONMENT=jest jest --watch",
    "test:cov": "env ENVIRONMENT=jest jest --coverage",
    "test:debug": "env ENVIRONMENT=jest node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "release": "standard-version",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./ormconfig.ts",
    "migration:generate": "npm run typeorm migration:generate -n",
    "migration:create": "npm run typeorm migration:create -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz/commitizen.js"
    }
  },
  "dependencies": {
    "@dataui/crud": "^5.3.4",
    "@dataui/crud-request": "^5.3.4",
    "@dataui/crud-typeorm": "^5.3.4",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.0.5",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.1",
    "axios": "^0.24.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "cpy-cli": "^3.1.1",
    "csv": "^6.3.6",
    "csv-parser": "^3.0.0",
    "jest-mock": "^29.7.0",
    "jest-sonar": "^0.2.16",
    "nestjs": "^0.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "typeorm": "^0.3.20",
    "uuid": "^8.3.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/jest-json-schema": "^2.1.3",
    "@types/node": "^18.0.3",
    "@types/pg": "^8.11.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^28.1.2",
    "jest-json-schema": "^6.0.0",
    "prettier": "^2.7.1",
    "sinon": "^12.0.1",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.3.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.1.6"
  }
}
